production:
  adapter: postgresql
  database: foreman
  username: {{ foreman_db.user }}
  password: {{ foreman_db.passwd}}
{% if foreman_db.socket is defined %}
  socket: "{{ foreman_db.socket }}"
{% elif foreman_db.host is defined and foreman_db.port is defined %}
  host: "{{ foreman_db.host }}"
  port: "{{ foreman_db.port }}"
{% else %}
  host: "localhost"
{% endif %}
